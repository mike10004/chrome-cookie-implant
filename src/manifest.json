{
  "manifest_version": 2,

  "name": "Cookie Implant",
  "description": "Add cookies to your Chrome profile",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Implant Cookies"
  },

  "permissions": [
    "activeTab",
    "cookies",
    "http://*/*",
    "https://*/*",
		"tabs",
		"cookies",
		"contextMenus",
		"unlimitedStorage",
		"notifications",
		"storage",
		"clipboardWrite"
  ],
	
	"homepage_url": "http://www.editthiscookie.com/",
	
	"options_page": "options.html",
	
	"minimum_chrome_version": "18",
	"update_url": "https://github.com/mike10004/chrome-cookie-implant"
}

